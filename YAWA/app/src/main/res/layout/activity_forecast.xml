<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_forecast"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="isel.yawa.ForecastActivity">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:text="Today "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/today"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_weight="1" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/todayicon"
            android:layout_weight="1"
            android:layout_row="2"
            android:layout_column="0" />
        <TextView
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/todaydesc"
            android:layout_row="1"
            android:layout_column="0"/>

        <TextView
            android:text="Tomorrow "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/intwodays"
            android:id="@+id/tomorrow"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_weight="1" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tomorrowicon"
            android:layout_weight="1"
            android:layout_row="2"
            android:layout_column="1" />
        <TextView
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tomorrowdesc"
            android:layout_row="1"
            android:layout_column="1"/>


        <TextView
            android:text="In 2 days "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/inthreedays"
            android:layout_toEndOf="@+id/inthreedays"
            android:id="@+id/intwodays"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_weight="1" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/twodaysicon"
            android:layout_weight="1"
            android:layout_row="2"
            android:layout_column="2" />
        <TextView
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/twodaysdesc"
            android:layout_row="1"
            android:layout_column="2"/>

        <TextView
            android:text="In 3 days "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/infourdays"
            android:id="@+id/inthreedays"
            android:layout_row="0"
            android:layout_column="3"
            android:layout_weight="1" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/threedaysicon"
            android:layout_weight="1"
            android:layout_row="2"
            android:layout_column="3" />
        <TextView
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/threedaysdesc"
            android:layout_row="1"
            android:layout_column="3"/>

        <TextView
            android:text="In 4 days"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/today"
            android:id="@+id/infourdays"
            android:layout_row="0"
            android:layout_column="4"
            android:layout_weight="1" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fourdaysicon"
            android:layout_weight="1"
            android:layout_row="2"
            android:layout_column="4" />
        <TextView
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fourdaysdesc"
            android:layout_row="1"
            android:layout_column="4"/>

    </GridLayout>

</LinearLayout>
